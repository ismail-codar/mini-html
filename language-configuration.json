{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["<", ">"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "<", "close": ">" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "<", "close": ">" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "indentationRules": {
    "increaseIndentPattern": "^<(\\w|[^!])[^>]*[^/]>",
    "decreaseIndentPattern": "^<\\/(\\w|[^!])[^>]*>"
  },
  "folding": {
    "markers": {
      "start": "^\\s*<!--\\s*#?region\\b",
      "end": "^\\s*<!--\\s*#?endregion\\b"
    }
  },
  "wordWrap": "on",
  "format": {
    "onType": true,
    "onSave": true
  }
}