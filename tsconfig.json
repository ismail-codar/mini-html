{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "outDir": "out",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "vscode"
    ]
  },
  "include": [
    "client/src/**/*",
    "server/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "client/out",
    "server/out",
    "dist"
  ]
}
